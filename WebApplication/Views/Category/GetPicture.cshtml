@model WebApplication.Models.Сategory
 
@{
    ViewData["Title"] = "DataSerialazation";
}
<h2>@ViewData["Title"]</h2>
 
<form method="post" enctype="multipart/form-data">
    <div>
        <input type="hidden" asp-for="CategoryID" />
        <div class="form-group">
            <label asp-for="CategoryName"></label>
            <div>@Model.CategoryName</div>
        </div>
        <div class="form-group">
            <label>Upload image</label>
            <input type="file" name="uploadedFile" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>
 
<img src="@Url.Action("GetImage", new { id=@Model.CategoryID})" style="width:500px;height:500px;" />
<div>
    <a asp-action="GetCategories">Back to List</a>
</div>
